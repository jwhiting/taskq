{
  "name": "taskq",
  "version": "0.1.0",
  "description": "Multi-interface task queue management system with CLI, MCP server, and web interface",
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "main": "./dist/core/index.js",
  "types": "./dist/core/index.d.ts",
  "bin": {
    "taskq": "./dist/cli/index.js",
    "taskq-mcp-server": "./dist/mcp-server/index.js",
    "taskq-web": "./dist/web-server/index.js"
  },
  "exports": {
    ".": "./dist/core/index.js",
    "./core": "./dist/core/index.js",
    "./cli": "./dist/cli/index.js",
    "./mcp-server": "./dist/mcp-server/index.js",
    "./web-server": "./dist/web-server/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "dev": "yarn build:watch",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "task-queue",
    "cli",
    "mcp",
    "sqlite",
    "typescript",
    "task-management",
    "concurrent-workers"
  ],
  "author": "Joshua Whiting",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LLMs.txt"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^12.2.0",
    "commander": "^14.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "jest-util": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
